<Window x:Class="Minesweeper.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper.WPF"
        mc:Ignorable="d"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="231*"/>
            <RowDefinition Height="Auto" MinHeight="10"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.ColumnSpan="4" Source="Image/startImage.jpg"></Image>

        <Label Grid.Row="2" Grid.Column="0" Content="SelectLevel : " HorizontalAlignment="Right" VerticalAlignment="Center" Height="26" Margin="0,5" Width="81"></Label>
        <ComboBox Name="Level_listbox" Grid.Row="2" Grid.Column="1" MaxWidth="130" MaxHeight="30"  Margin="5" SelectedIndex="0"/>
        <Button Grid.Row="3" Grid.Column="2" Width="50" MaxHeight="50" HorizontalAlignment="Center" Content="시작"  Command="{Binding Path=StartCommandAction}"></Button>
        <Button Grid.Row="3" Grid.Column="3" Width="50" MaxHeight="50" HorizontalAlignment="Center" Content="끝내기"  Command="{Binding Path=CancelCommandAction}"></Button>

    </Grid>
</Window>
